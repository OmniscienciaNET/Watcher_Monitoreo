<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="width:80%;outline:0">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(#953102, #950208)">
                <button type="button" style="color:white" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel" style="font-size:14px;color:white;font-weight:bold">Busqueda de Abonado</h4>
            </div>
            <div class="modal-body">
                <div>
                    <table style="width:100%">
                        <tr>
                            <td>
                                Oficina
                            </td>
                            <td>
                                @Html.TextBox("AbndOfi", "", new { id = "txtAbndOfi", @class = "filtrosBusq", style = "width:150px;text-transform:uppercase", maxlength = "70" })
                            </td>
                            <td>
                                Distribuidor
                            </td>
                            <td>
                                @Html.TextBox("DstbCode", "", new { id = "txtDstbCode", @class = "filtrosBusq", style = "width:150px;text-transform:uppercase", maxlength = "70" })
                            </td>
                            <td colspan="2">
                                <button id="btnSearchAbnd" type="button" class="btn btn-primary" style="width:90px">Buscar</button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Dirección
                            </td>
                            <td colspan="3">
                                @Html.TextBox("Address", "", new { id = "txtAddress", @class = "filtrosBusq", style = "width:309px;text-transform:uppercase" })
                            </td>
                        </tr>
                        <tr>
                            <td colspan="5" style="font-size:4px">&nbsp;</td>
                        </tr>
                        <tr>
                            <td colspan="5" width="100%">
                                <table style="width: 100%; font-size: x-small;border:none;border-collapse:collapse">
                                    <tr style="background-color: darkgray; font-size: 9pt;font-weight:bold;height:30px">
                                        <td style="width:200px;text-align:center">DISTRIBUIDOR</td>
                                        <td style="width: 90px; text-align: center">ABONADO</td>
                                        <td style="width: 300px; text-align: center">OFICINA</td>
                                        <td style="text-align: center">DIRECCIÓN</td>
                                    </tr>
                                </table>
                                <div style="height:150px; overflow:auto;">
                                    <table id="tbRegistrosBusq" style="width: 100%; font-size: x-small;border:none;border-collapse:collapse"></table>
                                </div>
                                <table style="width:100%">
                                    <tr>
                                        <td style="text-align:center">
                                            <div id="divPaginacionBusq" style="display:none">
                                                <nav style="text-align:center">
                                                    <ul class="paginacion">
                                                        <li id="liPaginaBusq"></li>
                                                    </ul>
                                                </nav>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/BusqAbonado.js" async></script>