@{
    ViewBag.Title = "Reporte de Actividades";
}
<link href="~/Content/Popup.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/jquery-ui-timepicker-addon.min.css" rel="stylesheet" />
<table border="0" cellpadding="0" cellspacing="0" style="width:100%;">
    <tr>
        <td>
            <table align="center" border="0" cellpadding="0" cellspacing="0" class="context_table" style="width:99%;">
                <tr>
                    <td align="center" class="cab_context">OPCIONES DE BÚSQUEDA</td>
                </tr>
                <tr>
                    <td>
                        <table style="width:100%">
                            <tr>
                                <td style="width:35%">
                                    <fieldset style="height:75px">
                                        <table>
                                            <tr>
                                                <td>Distribuidor</td>
                                                <td>
                                                    @Html.TextBox("DstbCod", "", new { id = "txtDstbCod", style = "width:40px;text-transform:uppercase", maxlength = 2, tabindex = 1 })
                                                    @Html.TextBox("DstbDesc", "", new { id = "txtDstbDesc", style = "width:240px;", @readonly = "readonly" })
                                                </td>
                                                <td colspan="2" style="padding-left:5px">
                                                    <button id="LookForAbnd" type="button" data-toggle="modal" data-target="#myModal" title="Buscar Abonado"><img alt="" src="~/Images/search.png" /></button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Abonado</td>
                                                <td>
                                                    @Html.TextBox("AbndCod", "", new { id = "txtAbndCod", style = "width:60px;text-transform:uppercase", maxlength = 10, tabindex = 2 })
                                                    @Html.TextBox("AbndDesc", "", new { id = "txtAbndDesc", style = "width:240px;", @readonly = "readonly" })
                                                </td>
                                                <td style="padding-left:5px">
                                                    Area
                                                </td>
                                                <td>
                                                    @Html.TextBox("AreaCod", "", new { id = "txtAreaCod", style = "width:40px;text-transform:uppercase", tabindex = 2 })
                                                </td>
                                            </tr>
                                        </table>
                                    </fieldset>
                                </td>
                                <td style="width:11%">
                                    <table border="0" cellpadding="0" cellspacing="0" style="width:100%">
                                        <tr>
                                            <td>
                                                <fieldset style="height: 89px; margin-bottom: 14px">
                                                    <legend style="font-size: 11px; margin-bottom: 0px; border-width: 0px; border-style: none; width: auto">
                                                        <input id="cbCtrlFecha" type="checkbox" checked="checked" style="vertical-align:sub" />
                                                    </legend>
                                                    <table border="0" cellpadding="0" cellspacing="0" id="tblCtrlFecha" style="margin-top:7px;width:100%">
                                                        <tr>
                                                            <td style="text-align:right">
                                                                <input id="txtFechaIni" readonly="readonly" class="Fecha" style="width:70px;text-align:center" />
                                                            </td>
                                                            <td style="padding-left:5px;text-align:left">
                                                                <input id="txtHoraIni" readonly="readonly" class="Fecha" maxlength=5 style="width:35px;text-align:center" />
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td colspan="2" style="font-size:3px;">&nbsp;</td>
                                                        </tr>
                                                        <tr>
                                                            <td style="text-align:right">
                                                                <input id="txtFechaFin" readonly="readonly" class="Fecha" style="width:70px;text-align:center" />
                                                            </td>
                                                            <td style="padding-left: 5px; text-align: left">
                                                                <input id="txtHoraFin" readonly="readonly" class="Fecha" maxlength=5 style="width:35px;text-align:center" />
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </fieldset>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td style="width:15%">
                                    <fieldset style="height: 87px; margin-bottom: 11px">
                                        <legend style="font-size:11px;margin-bottom:0px;border-width:0px;border-style:none;width:auto">Alarma</legend>
                                        <table style="margin-top:5px">
                                            <tr>
                                                <td>
                                                    @Html.TextBox("CodAlarma", "", new { id = "txtCodAlarma", style = "width:30px;text-transform:uppercase", maxlength = 3 })
                                                </td>
                                                <td style="padding-left:2px;">
                                                    @Html.TextBox("DesAlarma", "", new { id = "txtDesAlarma", style = "width:150px;text-transform:uppercase" })
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="3"></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">
                                                    <select id="ddlAlarmas" style="width:200px;font-size:10px;height:20px"></select>
                                                </td>
                                            </tr>
                                        </table>
                                    </fieldset>
                                </td>
                                <td>
                                    <fieldset style="height: 75px">
                                        <table>
                                            <tr>
                                                <td style="padding-right:5px">Ubicación</td>
                                                <td><select id="ddlInOutSide" name="InOutSide"><option value="=">=</option><option value="≠">≠</option></select></td>
                                                <td style="padding-right:15px"><select id="ddlDpto" name="Ubigeo"><option selected="selected" value='00'>TODOS</option><option value='01'> AMAZONAS</option><option value='02'> ÁNCASH</option><option value='03'> APURÍMAC</option><option value='04'> AREQUIPA</option><option value='05'> AYACUCHO</option><option value='06'> CAJAMARCA</option><option value='07'> CALLAO</option><option value='08'> CUSCO</option><option value='09'> HUANCAVELICA</option><option value='10'> HUÁNUCO</option><option value='11'> ICA</option><option value='12'> JUNÍN</option><option value='13'> LA LIBERTAD</option><option value='14'> LAMBAYEQUE</option><option value='15'> LIMA</option><option value='16'> LORETO</option><option value='17'> MADRE DE DIOS</option><option value='18'> MOQUEGUA</option><option value='19'> PASCO</option><option value='20'> PIURA</option><option value='21'> PUNO</option><option value='22'> SAN MARTÍN</option><option value='23'> TACNA</option><option value='24'> TUMBES</option><option value='25'> UCAYALI</option></select></td>
                                                <td colspan="2">
                                                    <button name="Buscar" id="btnSearch" title="Buscar" value=""><img src="~/Images/binocular.png" alt="" /></button>
                                                    <button name="Report" id="btnReport" type="button" title="Reporte" value=""><img src="~/Images/print.png" alt="" width="16" height="16" /></button><a id="exportarExcel" href="#" style="display:none"></a>
    <button id="btnClean" type="button" title="Limpiar"><img alt="" src="~/Images/Limpiar.png"></button>
    <button id="btnCorreo" type="button" title="Correo"><img id="imgbtnPlay" alt="" src="~/Images/email.png" width="16" height="16" /></button>
</td>
                                            </tr>
                                            <tr>
                                                <td style="padding-right:5px">Tipo Abonado</td>
                                                <td colspan="2"><select id="ddlTipoAbonado" name="TipoAbonado"><option value='0'>TODOS</option><option value='1'>AGENCIA</option><option value='8'>AGENCIA ADM</option><option value='2'>ATM</option><option value='7'>ATM-N</option><option value='3'>BÓVEDA</option><option value='9'>COFRE</option><option value='6'>NO APLICA</option></select></td>
                                                <td>
                                                    <table cellpadding="0" cellspacing="0" >
                                                        <tr>
                                                            <td>
                                                                <input id="chkEvitarTest" type="checkbox" style="vertical-align:sub"/>Evitar periodos de Test
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <input id="chkEvitarCond" type="checkbox" style="vertical-align:sub"/>Evitar condiciones pre-establecidas
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>
                                    </fieldset>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td>
            <table align="center" border="0" cellpadding="0" cellspacing="0" class="context_table" style="width:99%">
                <tr>
                    <td style="width:100%;" valign="top" align="center">
                        <table style="width: 100%; font-size: x-small;border:none;border-collapse:collapse">
                            <tr style="background-color: darkgray; font-size: 9pt;font-weight:bold;height:30px">
                                <td style="width:20px;text-align:center">.</td>
                                <td style="width:60px">Fecha</td>
                                <td style="width:50px">Hora</td>
                                <td style="width:70px">Abonado</td>
                                <td style="width:280px;text-align:left">Oficina</td>
                                <td style="width:70px">ID Señal</td>
                                <td style="width:50px">Zona</td>
                                <td style="width:70px">Condición</td>
                                <td style="width:200px">Descripción Condición</td>
                                <td style="width:260px">Usuario/ Dispositivo/ Ubicación</td>
                                <td style="width:40px">Área</td>
                                <td>Descripción Área</td>
                            </tr>
                        </table>
                        <div id="divActividad" style="height:250px; overflow:auto;">
                            <table style="width: 100%; font-size: x-small;border:none;border-collapse:collapse">
                                <tbody id="tbRegistrosActividades"></tbody>
                            </table>
                        </div>
                        <table style="width:100%">
                            <tr>
                                <td style="text-align:center">
                                    <div id="divPaginacionActividades" style="display:none">
                                        <nav style="text-align:center">
                                            <ul class="paginacion">
                                                <li id="liPaginaActividades"></li>
                                            </ul>
                                        </nav>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <br />
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
